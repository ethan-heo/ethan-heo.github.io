---
import type { BlogContent } from "../../v1/blog/domain/interfaces/model.interface";
import Block from "./Block.astro";
import LazyBlock from "./LazyBlock.astro";
import RenderBlock from "./RenderBlock.astro";

const { blocks } = Astro.props as {
    blocks: BlogContent[];
};
---

{
    blocks.map((block) => {
        if (block.type === "nested_items") {
            return (
                <LazyBlock type={block.contentType} blocks={block.content} />
            );
        }
        return <Block {...block} />;
    })
}
